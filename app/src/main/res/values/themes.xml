<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/semiGold</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/semiGold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="mainTextForHeadTexts">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/main_bold</item>
    </style>
    <style name="secondTextForContent">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/secondBlack</item>
        <item name="font">@font/main_bold</item>
    </style>
    <style name="basmallahText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondBlack</item>
        <item name="font">@font/main_regular</item>
    </style>


</resources>