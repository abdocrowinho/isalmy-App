<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg"
    tools:context=".ui.quran_content_Activity.quran_activity">
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/ab_quranActivity"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
      app:elevation="0dp"
      >
      <Toolbar
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/transparent"
          >
          <TextView
              android:id="@+id/tittleSourah"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="البقرة"
              android:layout_gravity="center"
              style="@style/mainTextForHeadTexts"/>
      </Toolbar>


  </com.google.android.material.appbar.AppBarLayout>


    <include
        android:id="@+id/Rv_quranVerses"
        layout="@layout/card_quran_content"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>